{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "paths": {
      "@components": ["components"],
      "@screens": ["screens"],
      "@utils": ["utils"],
      "@assets": ["assets"],
      "@i18n": ["i18n"],
      "@constants": ["constants"],
      "@routes": ["routes"],
      "@hooks": ["hooks"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
